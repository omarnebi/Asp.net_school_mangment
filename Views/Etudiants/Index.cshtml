@model IEnumerable<CallCenterV1.Models.Etudiant>

@{
    ViewData["Title"] = "Index";
}
<partial name="hedar" />
<h4>Gestion des Etudiants</h4>

<p>
    <a asp-action="Create"  class="btn btn-outline-dark" ><i class="fa fa-plus-square"></i>Create New</a>
</p>
<table class="table table-striped mt-4">
    <thead class="">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prenomn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateNaissiance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnneBac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Niveau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDGroupe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prenomn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateNaissiance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnneBac)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Niveau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDGroupe)
                </td>
                <td>
                   
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info" aria-hidden="true"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
